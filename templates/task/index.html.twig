{% extends 'base.html.twig' %}

{% block title %}Task Controller{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper">
    <h2>Add your task</h2>
    {{ form(task_form) }}

    {% for task in tasks %}

    <p><a href="{{ path('app_task_show', {id:task.id}) }}">{{ task.title }}</a></p>
    {% endfor %}

    <hr>

    {% if(previous >= 0) %}
        <a href="{{ path('app_task', {offset: previous}) }}">Previous</a>
    {% endif %}

    {% if(next < tasks|length ) %}
        <a href="{{ path('app_task', {offset: next}) }}">Next</a>
    {% endif %}

</div>
{% endblock %}
