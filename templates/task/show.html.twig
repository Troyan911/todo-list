{% extends 'base.html.twig' %}

{% block title %}Task Show Controller{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <a href="{{ path('app_task') }}">Show all tasks</a>
<div class="wrapper">
    <h2>Task</h2> #{{ task.id }}


    <p>{{ task.title }} <b>{{ task.status.value }}</b> </p>
    <p>Created At {{ task.createdAt|format_datetime() }}</p>

    {{ form(task_form) }}


</div>
{% endblock %}
